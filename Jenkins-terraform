   pipeline {
    agent any
 
   stages {
        stage('Download terraform code from Gihub') { 
            steps {
                git credentialsId: 'Sanjivani99/******', url: 'https://github.com/Sanjivani99/Infraprovision-protject.git'
            }    
        }
        stage('init') {
            steps {
                sh ('terraform init') 
            }
        }
        stage('terraform  action') {
            steps {
                echo "Terraform action is --> ${action}"
                sh ('terraform ${action} --auto-approve')
            }
        }
    }
    
}
